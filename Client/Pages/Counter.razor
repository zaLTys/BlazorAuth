@page "/counter"
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p></p>
<AuthorizeView Roles="Admin">
    <NotAuthorized>
        You Should always see this, no authorization required.

    </NotAuthorized>
    <Authorized>
        You should see this when you're authorized as @context?.User?.Identity?.Name
    </Authorized>
</AuthorizeView>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
